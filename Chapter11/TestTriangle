/*
 * A program that creates a triangle with three sides and calculates the area and perimeter of the triangle.
 * The triangle inherits some features from the GeometricObject class, such as color and filled.
 * 
 * Author: Emily Rhodes
 * Date: 2026-02-24
 * Class: TESD 1800
*/

import java.util.Scanner;

// Create the superclass GeometricObject
class GeometricObject {
    // Declare variables
    private String color = "white";
    private boolean filled;
    private java.util.Date dateCreated;
    // No-arg constructor that creates a default geometric object
    GeometricObject() {
        dateCreated = new java.util.Date();
    }
    // Constructor that creates a geometric object with the specified color and filled value
    GeometricObject(String newColor, boolean newFilled) {
        color = newColor;
        filled = newFilled;
        dateCreated = new java.util.Date();
    }
    // Getter and setter methods for color and filled
    String getColor() {
        return color;
    }
    void setColor(String newColor) {
        color = newColor;
    }
    boolean isFilled() {
        return filled;
    }
    void setFilled(boolean newFilled) {
        filled = newFilled;
    }
    // Accessor method for date created
    java.util.Date getDateCreated() {
        return dateCreated;
    }
}

// Create the Triangle class that extends GeometricObject
class Triangle extends GeometricObject {
    // Declare the variables for the three sides
    private double side1 = 1.0;
    private double side2 = 1.0;
    private double side3 = 1.0;
    // No-arg constructor that creates a default triangle
    Triangle() {
    }
    // Constructor that creates a triangle with the specified sides
    Triangle(double newSide1, double newSide2, double newSide3) {
        side1 = newSide1;
        side2 = newSide2;
        side3 = newSide3;
    }
    // Getter methods for the three sides
    double getSide1() {
        return side1;
    }
    double getSide2() {
        return side2;
    }
    double getSide3() {
        return side3;
    }
    // Method that returns the area of the triangle
    double getArea() {
        double s = (side1 + side2 + side3) / 2;
        return Math.sqrt(s * (s - side1) * (s - side2) * (s - side3));
    }
    // Method that returns the perimeter of the triangle
    double getPerimeter() {
        return side1 + side2 + side3;
    }
    // Method that returns a string description of this triangle
    public String toString() {
        return "Triangle: side1 = " + side1 + " side2 = " + side2 + " side3 = " + side3;
    }
}

// Create the TestTriangle class
public class TestTriangle {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        // Prompt the user to enter three sides of the triangle, a color, and a Boolean value to indicate whether the triangle is filled
        System.out.print("Enter the length of side 1: ");
        double side1 = input.nextDouble();
        System.out.print("Enter the length of side 2: ");
        double side2 = input.nextDouble();
        System.out.print("Enter the length of side 3: ");
        double side3 = input.nextDouble();
        System.out.print("What color is the triangle? ");
        String color = input.next();
        System.out.print("Is the triangle filled (true/false)? ");
        boolean filled = input.nextBoolean();
        // Create a Triangle object with the specified sides, color, and filled value
        Triangle triangle = new Triangle(side1, side2, side3);
        triangle.setColor(color);
        triangle.setFilled(filled);
        // Display the area, perimeter, color, and filled value of the triangle
        System.out.println("\n" + triangle.toString());
        System.out.println("Area: " + triangle.getArea());
        System.out.println("Perimeter: " + triangle.getPerimeter());
        System.out.println("Color: " + triangle.getColor());
        System.out.println("Filled: " + triangle.isFilled());
    }
}
